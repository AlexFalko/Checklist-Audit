.container.m-3.d-flex.justify-content-center
  = link_to t('.new'), new_checklist_path, class:'btn btn-primary mr-4'
  = link_to t('.show'), audits_path, class:'btn btn-success'

%ul.list-group
  - @checklists.each do |cl|
    %li.list-group-item
      .row.align-items-center
        .col-3.text-left
          = link_to cl.title, cl
        .col-7
          = cl.description
        .col-2.text-center
          = link_to t('.destroy'), checklist_path(cl), method: :delete,class: "btn btn-danger mb-1", data: { confirm: t('.confirm') }
          - if cl.status?
            = link_to t("Unpablish"), toggle_status_checklist_path(cl), method: :patch, class: "btn btn-success"
          - else
            = link_to t("Pablish"), toggle_status_checklist_path(cl), method: :patch, class: "btn btn-success"
          
.row
  .col.d-flex.justify-content-center.mt-3
    -if @checklists.length >= Checklist::COUNT_ITEM_PAGY
      = pagy_bootstrap_nav(@pagy).html_safe

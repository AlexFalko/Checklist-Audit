.row
  .col.field_center
    .width_field
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = render "devise/shared/error_messages", resource: resource
        .input-field
          %i.material-icons.prefix email
          = f.label :email
          = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"
        .input-field
          %i.material-icons.prefix vpn_key
          = f.label :password
          = f.password_field :password, autocomplete: "new-password", class: "form-control"
        .input-field
          %i.material-icons.prefix vpn_key
          = f.label :password_confirmation, for: "icon_prefix"
          = f.password_field :password_confirmation, :id=>"icon_prefix", autocomplete: "new-password", class: "form-control"
        .actions.mt-2
          = f.submit "Sign up", class: "btn btn-primary"      
